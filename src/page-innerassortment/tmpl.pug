extend ../partials/page.pug
block section
  .innerproduct
    .innerproduct__wrapper.container
      .innerproduct__item.row
        .prod.col-lg-6.col-xl-6.col-md-12
        .text.col-lg-6.col-xl-6.col-md-12

  .pagelinks#pagelinks
    .container
      .row
        nav(aria-label='breadcrumb')
          ol.breadcrumb
            li.breadcrumb-item
              a(href='index.html') Главная 
              span > 
            li.breadcrumb-item
              a(href='assortment.html') Ассортимент
              span > 
            li.breadcrumb-item.active(aria-current='page') ТЕМНЫЙ ШОКОЛАД / БИСКВИТ
  .about
    .about__box.container
      .about__wrapper.row
        .about__imagebox.imagebox.col-xl-6.col-lg-6.col-md-12
          .imagebox__wrapper(data-toggle="modal", data-target="#lightbox")
            img#imagebox__main.imagebox__photo(src="../images/item4.png", alt="")

          #lightbox.modal.fade
            .modal-dialog.modal-dialog-centered(role='document')
              .modal-content
                .modal-body
                  #carouselExampleCaptions.carousel(data-ride='carousel', data-interval="false")
                    .carousel-inner
                      .carousel-item.active
                        img.d-block.w-100(src='../images/item4.png')
                      .carousel-item
                        img.d-block.w-100(src='../images/item2.png')
                      .carousel-item
                        img.d-block.w-100(src='../images/item3.png')
                      .carousel-item
                        img.d-block.w-100(src='../images/item2.png')
                      .carousel-item
                        img.d-block.w-100(src='../images/item4.png')                          
                    a.carousel-control-prev(href='#carouselExampleCaptions', role='button', data-slide='prev')
                      span.carousel-control-prev-icon(aria-hidden='true')
                      span.sr-only Previous
                    a.carousel-control-next(href='#carouselExampleCaptions', role='button', data-slide='next')
                      span.carousel-control-next-icon(aria-hidden='true')
                      span.sr-only Next

            .imagebox__open
              img(src="../images/x.png", alt="")
          ul.imagebox__items
            li.imagebox__item(data-target="#carouselExampleCaptions" data-slide-to="0")
              img.itemclick.active(src="../images/item4.png")      
            li.imagebox__item(data-target="#carouselExampleCaptions" data-slide-to="1")
              img.itemclick(src="../images/item2.png")            
            li.imagebox__item(data-target="#carouselExampleCaptions" data-slide-to="2")
              img.itemclick(src="../images/item3.png")
            li.imagebox__item(data-target="#carouselExampleCaptions" data-slide-to="3")
              img.itemclick(src="../images/item2.png")
            li.imagebox__item(data-target="#carouselExampleCaptions" data-slide-to="4")
              img.itemclick(src="../images/item4.png")

        .about__text.col-xl-6.col-lg-6.col-md-12
          include ../partials/titlebox
          +titlebox('ТЕМНЫЙ ШОКОЛАД / БИСКВИТ') 
          p
            | There are many variations of passages of Lorem Ipsum available, but the majority 
