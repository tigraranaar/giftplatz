          p.price
            | 200 РУБ

  .innerassortment
    .innerassortment__wrapper.container
        include ../partials/titlebox
        +titlebox('ПОХОЖИЕ ПРОДУКТЫ')
        .innerassortment_product.product.row
          include ../partials/product-item
          .product-item.product.col-lg-4.col-xl-4.col-md-6
            +product-item('product__image-8', 'dddddddddddddddddd', 'Шоколад')
          .product-item.product.col-lg-4.col-xl-4.col-md-6
            +product-item('product__image-9', 'dddddddddddddddddd', 'Шоколад')
          .product-item.product.col-lg-4.col-xl-4.col-md-6
            +product-item('product__image-10', 'dddddddddddddddddd', 'Шоколад')         